<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="horizontal"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
>

    <LinearLayout
        android:id="@+id/color_header"
        android:layout_width="6dp"
        android:layout_height="match_parent" android:layout_marginRight="20dp">
    </LinearLayout>

<LinearLayout
android:orientation="vertical"
android:paddingLeft="10dp"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:layout_marginTop="10dp" android:layout_marginBottom="10dp">

<TextView
    android:id="@+id/item_title"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:textColor="@android:color/white"
    android:textSize="20sp" />
<TextView
	android:layout_width="fill_parent"
	android:textSize="12sp"
	android:ellipsize="end"
	android:singleLine="true"
	android:textColor="#00ff00"
	android:layout_height="wrap_content" android:id="@+id/item_subtitle"/>

<TextView
android:layout_width="fill_parent"
android:layout_height="wrap_content" android:id="@+id/item_description"/>
</LinearLayout>
</LinearLayout>