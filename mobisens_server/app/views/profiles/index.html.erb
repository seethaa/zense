
<table width="86%" align="center" >
  <tr>
    <td>
      <div class="page page_paginated" style="width: auto; height: auto; margin-top: 30px;">
        <div style="font-size: 1.6em; font-weight: bold; float: left; " >Profiles</div>
        <div style="float: right; margin-right: 5px; ">
          <%=  link_to 'Delete All', {:action => 'delete_all'}, 
            :confirm => "Are you sure to remove all these Profiles?\n" +
                "The device configuration associate width this profile will de deleted as well."
            %>
        </div>
        <div class="clear"></div>

        <div class="error_message">
          <%= flash[:notice] %>
          <% flash[:notice] = '' %>
        </div>

        <hr/>

        <table cellpadding="3px" >
          <tr>
            <td width="20%" align="center" colspan="2" >Profile</td>
            <td width="35%" align="center" >Created Time</td>
            <td width="35%" align="center" >Modified Time</td>
            <td>&nbsp;</td>
            <td>&nbsp;</td>
            <td>&nbsp;</td>
            
          </tr>

        <% @profiles.each do |profile| %>
          <tr>
            <td align="center" ><%= image_tag(profile.photo.url, :size => "32x32", :alt => profile.name) %></td>
            <td align="left" ><%= profile.name %></td>
            <td align="center" ><%= profile.created_at.getlocal.to_s(:db) %></td>
            <td align="center" ><%= profile.updated_at.getlocal.to_s(:db) %></td>
            <td><%= link_to 'Show', profile %></td>
            <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
            <td>
              <%= link_to 'Delete', profile, :confirm => "Are you sure to delete this Profile?\n" +
                "The device configuration associate width this profile will de deleted as well.",
                :method => :delete %>
            </td>
          </tr>
        <% end %>
        </table>
        <hr/>
        <div style="height:20px;"></div>
        <%= link_to 'Create Profile', new_profile_path %>
      </div>
    </td>
  </tr>
</table>

