<table width="86%" align="center" >
  <tr>
    <td>
      <div class="page page_paginated" style="width: auto; height: auto; margin-top: 30px;">
        <div style="font-size: 1.6em; font-weight: bold; float: left; " >Profiles</div>
        <div class="clear"></div>

        <div class="error_message">
          <%= flash[:notice] %>
          <% flash[:notice] = '' %>
        </div>

        <hr/>

        <table cellpadding="3px" >
          <tr>
            <td width="60%" align="center" >Page Content</td>
            <td width="35%" align="center" >Created Time</td>
            <td>&nbsp;</td>
            <td>&nbsp;</td>
            <td>&nbsp;</td>

          </tr>

        <% @content_pages.each do |content_page| %>
          <tr>
            <td align="center" >
              <div>
                <%= content_page.content.length > 50 ? "#{content_page.content[0...47]}..." : content_page.content %>
              </div>

            </td>
            <td align="center" ><%= content_page.created_at.getlocal.to_s(:db) %></td>
            <td><%= link_to 'Details...', content_page %></td>
            <td><%= link_to 'Edit', edit_content_page_path(content_page) %></td>
            <td>
              <%= link_to 'Delete', content_page,
                :confirm => "Are you sure to delete this Page?",
                :method => :delete %>
            </td>
          </tr>
        <% end %>
        </table>
        <br/>
        <div style="text-align: center;">

          <%= will_paginate @content_pages %>
        </div>
        <hr/>
        <div style="height:20px;"></div>
        <%= link_to 'Create Content Page', new_content_page_path %>
      </div>
    </td>
  </tr>
</table>